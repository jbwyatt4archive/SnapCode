<?xml version="1.0" encoding="UTF-8"?>
<VBox PrefWidth="640" PrefHeight="480" Padding="4,2,2,2" Spacing="3" FillWidth="true">
  <HBox Padding="0,16,0,0" Spacing="8">
    <Button Name="DeleteButton" PrefWidth="80" PrefHeight="22" LeanX="RIGHT" text="Delete">
      <binding aspect="Enabled" key="SelectedBreakpoint" />
    </Button>
    <Button Name="DeleteAllButton" PrefWidth="80" PrefHeight="22" text="Delete All" />
  </HBox>
  <ScrollView GrowHeight="true">
    <font name="Arial" size="12" />
    <ListView Name="BreakpointList" ItemKey="Descriptor">
      <binding aspect="Items" key="Breakpoints" />
    </ListView>
  </ScrollView>
</VBox>