
rm -rf /tmp/javadoc

cd /Temp/SnapKit/src

javadoc -d /tmp/javadoc -windowtitle 'SnapCode API' \
-header 'SnapCode API' \
-footer 'SnapCode API' \
-public \
snap/data/*.java \
snap/gfx/*.java \
snap/util/*.java \
snap/view/*.java \
snap/viewx/*.java \
snap/web/*.java

echo "Zipping javadoc.zip"
cd /tmp
zip -rq javadoc.zip javadoc
